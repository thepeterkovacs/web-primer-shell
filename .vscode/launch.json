{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "server",
			"type": "node-terminal",
			"request": "launch",
			"command": "npm run dev"
		},
		{
			"name": "client",
			"type": "chrome",
			"request": "launch",
			"url": "http://localhost:3000"
		},
		{
			"name": "app",
			"type": "node-terminal",
			"request": "launch",
			"command": "npm run dev",
			"serverReadyAction": {
				"pattern": "started server on .+, url: (https?://.+)",
				"uriFormat": "%s",
				"action": "debugWithChrome"
			}
		}
	]
}
